/* pages/service/service.wxss */
.container {
  justify-content: center;

}
.header {
  color:black;
  /* background: #F7C326; */
  /* padding: 12px 15px; */
  border-radius: 50px;
  font-weight: bolder;
  text-align: center;
  /* margin-top: 10px; */
  margin: 10px;
  /* opacity: 0.6; */
}
.p1{
  font-size: 20px;
}
.p2{
  font-size: 15px;
  font-weight: lighter;
}
.avatar-large {
  width: 145px;
  height: 145px;
  display: block;
  margin: 20px auto 0px auto;
  border-radius: 50%;
  text-align: center;
  box-shadow: 0 0 15px rgba(0,0,0,0.8);

}
.price-btn {
  color: white;
  background: #17274E;
  border: 1px;
  padding: 2px 2px 2px 2px;
  border-radius: 20px;
  font-weight: light;
  text-align: center;
  margin-left: 200px;
  margin-right: 50px;
}
/* content */
.description {
  color: black;
  background: #FABDBD;
  padding: 20px 20px;
  border-radius: 50px;
  font-weight: light;
  text-align: left;
  margin: 0 15px 0 15px;
}
.content-title {
  font-weight: bold;
  padding-top: 6px;
}
.about-me-content {
  border-bottom: 1px solid grey;
  padding-bottom: 8px;
}
.hour-div {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid grey;
}
/* booking btn */
.book-btn {
  color: white;
  background: #E04646;
  padding: 12px 15px;
  border-radius: 50px;
  font-weight: bolder;
  text-align: center;
  margin: 20px 20px;
  transition: opacity 0.3s ease;
}
.all-the-btn{
  display:flex;
  justify-content: space-around;
}
.background {
  background-color: #A8BFC5;
  height: 100%;
}