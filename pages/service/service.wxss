/* pages/service/service.wxss */
.container {
  justify-content: center;
}
.header {
  color: white;
  background: #F7C326;
  padding: 25px 30px;
  border-radius: 50px;
  font-weight: bolder;
  text-align: center;
  margin-top: 40px;
  margin: 10px;
  font-family: Lobster;
  font-size: 40px;
  /* opacity: 0.6; */
}
.avatar-large {
  width: 170px;
  height: 170px;
  display: block;
  margin-left: auto;
  margin-right: auto;
  border-radius: 50%;
  text-align: center;
  margin-top: 20px;
}
.price-btn {
  color: white;
  background: #17274E;
  border: 1px;
  padding: 5px 5px 5px 5px;
  border-radius: 20px;
  font-weight: light;
  text-align: center;
  margin-left: 200px;
  margin-right: 50px;
}
.description {
  color: gray;
  background: #FABDBD;
  padding: 20px 20px;
  border-radius: 50px;
  font-weight: bolder;
  text-align: center;
  margin: 30px;
}
.book-btn {
  color: white;
  background: #E04646;
  padding: 10px 20px;
  width: 500rpx;
  border-radius: 50px;
  font-weight: bolder;
  text-align: center;
  margin: 40px;
  font-family: lobster;
  font-size: 20px;
}
.background {
  background-color: #A8BFC5;
  /* background-size: cover; */
  height: 100%;
}