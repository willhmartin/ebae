/* pages/service/service.wxss */
.container {
  justify-content: center;

}
.header {
  color: white;
  background: #F7C326;
  padding: 5px 30px;
  border-radius: 50px;
  font-weight: bolder;
  text-align: center;
  /* margin-top: 50px; */
  margin: 10px;

  font-family: Lobster;
  /* font-size: 50px; */
  padding: 10px 100px;
}
.p1{
  font-size: 50px;
}
.p2{
  font-size: 15px;
  font-weight: lighter;
}
.avatar-large {
  width: 145px;
  height: 145px;
  display: block;
  margin: 20px auto 0px auto;
  border-radius: 50%;
  text-align: center;
  box-shadow: 0 0 15px rgba(0,0,0,0.8);
  margin-bottom: 20px;
}
.price-btn {
  color: white;
  background: #17274E;
  border: 1px;
  padding: 5px 5px 5px 5px;
  border-radius: 20px;
  font-weight: light;
  text-align: center;
  margin-left: 200px;
  margin-right: 50px;
}
/* content */
.description {
  color: gray;
  background: #FABDBD;
  padding: 20px 20px;
  border-radius: 50px;
  font-weight: light;
  text-align: center;
  margin: 0 15px 0 15px;
  
}
.content-title {
  font-size: 25px;
  font-weight: bold;
  padding-top: 6px;
  text-align: center;
  color: white;
  font-family: Lobster;
}
.about-me-content {
  /* border-bottom: 1px solid grey; */
  padding-bottom: 8px;
}
.hour-div {
  display: flex;
  justify-content: space-between;
  /* border-bottom: 1px solid grey; */
}
/* booking btn */
.book-btn {
  color: white;
  background: #E04646;
  padding: 10px 20px;
  width: 500rpx;
  border-radius: 50px;
  font-weight: bolder;
  text-align: center;
  margin: 40px;
  font-family: lobster;
  font-size: 20px;
}
.all-the-btn{
  display:flex;
  justify-content: space-around;
}
.background {
  background-color: #A8BFC5;
  height: 100%;
}