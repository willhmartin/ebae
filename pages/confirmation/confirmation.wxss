/* pages/confirmation/confirmation.wxss */
.header {
  color: white;
  font-family: 'Lobster';
  font-size: 60px;
  /* background: #F7C326; */
  /* padding: 20px 20px; */
  /* border-radius: 50px; */
  font-weight: bolder;
  text-align: center;
  /* margin: 10px; */
  text-shadow: 2px 2px 4px gray;
}

#img{
  transform: translate(5px);
}

#imgTwo{
  transform: translate(-5px);
}

.avatar {
  display: flex;
  justify-content: center; 
  margin: 50px 50px 0px 50px;
}
.avatar-large {
  width: 150px;
  height: 150px;
  display: block;
  border-radius: 50%;
  text-align: center;
}
.price-btn {
  color: white;
  background: #17274E;
  border: 1px;
  padding: 2px 2px 2px 2px;
  border-radius: 20px;
  font-weight: light;
  text-align: center;
  margin-left: 200px;
  margin-right: 50px;
}
.description {
  color: #4A4A4A;
  background: #FABDBD;
  padding: 12px 12px;
  border-radius: 50px;
  font-weight: bolder;
  text-align: center;
  margin: 10px;
  margin-top: 10px;
  margin-bottom: 10px;
  /* margin-top: 100px; */

}
.content {
  text-align: center;
}
.content-title {
  /* display: flex; */
  justify-content: space-between;
  margin: 10px;
  padding: 10px;
  color: white;
  font-family: Lobster;
  font-size: 30px;
}
.content-value {
  /* display: flex; */
  justify-content: space-between;
}
.book-btn {
  color: white;
  background: #E04646;
  /* padding: 12px 15px; */
  border-radius: 50px;
  font-weight: bolder;
  text-align: center;
  margin: 10px;
  transition: opacity 0.3s ease;
}
.background {
  background-color: #A8BFC5;
  /* background-size: cover; */
  height: 100%;
  margin: 0px;


.content-header {
  color: #4A4A4A;
  font-family: 'Lobster';
  font-size: 30px;
  padding: 20px 20px;
  font-weight: bolder;
  text-align: center;
  margin-top: 0px;
}
.submit {
  color: white;
  background-color: #E04646;
  padding: 10px 20px;
  width: 550rpx;
  border-radius: 50px;
  font-weight: bolder;
  font-family: Lobster;
  font-size: 25px;
  margin-top: 20px;
  margin-bottom: 20px;

