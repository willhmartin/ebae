/* pages/confirmation/confirmation.wxss */
.header {
  color: white;
  background: #F7C326;
  padding: 12px 15px;
  border-radius: 50px;
  font-weight: bolder;
  text-align: center;
  margin: 10px;
  /* opacity: 0.6; */
}
.avatar-large {
  width: 100px;
  height: 100px;
  display: block;
  margin-left: auto;
  margin-right: auto;
  border-radius: 50%;
  text-align: center;
}
.price-btn {
  color: white;
  background: #17274E;
  border: 1px;
  padding: 2px 2px 2px 2px;
  border-radius: 20px;
  font-weight: light;
  text-align: center;
  margin-left: 200px;
  margin-right: 50px;
}
.description {
  color: black;
  background: #FABDBD;
  padding: 12px 12px;
  border-radius: 50px;
  font-weight: bolder;
  text-align: center;
  margin: 10px;
}
.book-btn {
  color: white;
  background: #E04646;
  /* padding: 12px 15px; */
  border-radius: 50px;
  font-weight: bolder;
  text-align: center;
  margin: 10px;
  transition: opacity 0.3s ease;
}
.background {
  background-color: #A8BFC5;
  /* background-size: cover; */
  height: 100vh;
}