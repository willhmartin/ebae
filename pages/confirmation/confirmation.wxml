<!--pages/confirmation/confirmation.wxml-->

<view class="background" style="padding: 100rpx 30rpx 0 30rpx;">
  <view class='header'>Booking Confirmed! </view>

  <view class="avatar">

    <image class="avatar-large" alt="avatar-large" mode="aspectFill" id="img" src="{{ebae.ebae.avatar}}"></image>
      <image class="avatar-large" alt="avatar-large" mode="aspectFill" id="imgTwo"src="{{user.avatar}}"></image> 
</view>


<view class="content-header">The Details</view>
<!-- confirm info  -->
<view class="content">
  <view class='description'>
    <view class="content-title">
      <view>Date</view>
    </view>
        <view class="content-value">
          <view>{{ebae.dateOnly}}</view> 
        </view>
    <view class="content-title"> 
      <view>Duration</view>
    </view> 
      <view class="content-value">
        <view>{{ebae.ebae.duration}} hrs</view>
      </view>

    <view class="content-title"> 
      <view>Event</view>
    </view>
    <view class="content-value">
      <view>{{ebae.event}}</view>
    </view>
    <view class="content-title"> 
      <view>Location</view>
    </view>
    <view class="content-value"></view>
      <view>{{ebae.location}}</view>
    </view>
    <button  bindtap="goProfile" class="submit">Profile</button>
  </view>
</view>
