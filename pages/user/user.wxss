/* pages/user/user.wxss */

.header-image {
  background-size: cover;
  background-position: center;
  height: 150px;
  display: flex-inline;
  justify-content: center;
  align-items: center;
  margin: 0;
}
.avatar-bordered {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  box-shadow: 0 1px 2px rgba(0,0,0,0.2);
  border: white 1px solid;
  margin-top: 10px;
  margin-bottom: 10px;
  margin-left: 15px;
  margin-right: 300px;
  display: flex-inline;
  vertical-align: top;
}
.header-text {
  /* display: flex-inline; */
  display: flex;
  flex-direction: column;
  margin-left: 15px;
}
.bookings-text {
  margin-top: 15px;
  text-align: center;
  margin-bottom: 25px;
}
.h1 {
  margin: 0;
  color:black;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
  font-size: 25px;
  font-weight: bold;
}
.p {
  font-size: 15px;
  color: gray;
  opacity: .7;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
}
.background {
  background-color: #A8BFC5;
  background-size: cover;
  /* height: 100vh; */
}
.card {
width: 150px;
height: 200px;
box-shadow: 0 0 15px rgba(0,0,0,0.2);
/* margin-right: 10px;*/
/* margin-left: 10px; */
border-radius: 10px;
background-color:#FABDBD;
position: relative;
}
.card-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-gap: 7px;
  margin-left: 4px;
}
.text {
  display: flex;
  justify-content: space-evenly;
  font-weight: bold;  
}
.p1 {
  font-size: 12px;
  font-weight: 100;
  color: grey;
}
.card-pricing h2 {
  font-size: 12px;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  position: relative;
  font-weight: bold;
}
.card-pricing {
  position: absolute;
  bottom: 5px;
  left: 5px;
}
image {
  max-width: 100%;
  height: 200rpx;
  border-radius: 10px;
}
.btn-plus {
  color: white;
  font-size: 20px;
  border-radius: 50px;
  background:#F7C326;
  display: flex;
  /* flex-direction: row; */
  justify-content: flex-end;
  width: 21px;
  height: 21px;
}
